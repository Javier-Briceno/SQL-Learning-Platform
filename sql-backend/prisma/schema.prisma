generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// A registered user (Student, Tutor, Admin)
/// A registered user (Student, Tutor, Admin)
model User {
  id               Int          @id @default(autoincrement())
  email            String       @unique
  passwordHash     String
  name             String
  role             Role         @default(STUDENT)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @default(now()) @updatedAt
  isBanned         Boolean      @default(false)
  lastActiveAt     DateTime?    @default(now())
  submissions      Submission[] @relation("UserSubmissions")
  studentSubmissions Submission[] @relation("StudentSubmissions")  // Add this line
  tutorWorksheets  Worksheet[]  @relation("TutorWorksheets")
}
model ManagedDatabase {
  id        Int      @id @default(autoincrement())
  dbName    String   @unique
  ownerId   Int
  createdAt DateTime @default(now())
}

model Worksheet {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  database    String       // Add database field
  tutorId     Int          // Add tutorId field
  dueDate     DateTime?
  isPublished Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
  tutor       User         @relation("TutorWorksheets", fields: [tutorId], references: [id])
  submissions Submission[]
  tasks       Task[]       @relation("WorksheetTasks")
}

model Submission {
  id          Int       @id @default(autoincrement())
  status      String    @default("in_progress")
  grade       Int?
  feedback    String?
  passed      Boolean?
  submittedAt DateTime?
  gradedAt    DateTime?
  userId      Int
  studentId   Int       // Add studentId field
  worksheetId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  user        User      @relation("UserSubmissions", fields: [userId], references: [id], onDelete: Cascade)
  student     User      @relation("StudentSubmissions", fields: [studentId], references: [id], onDelete: Cascade)
  worksheet   Worksheet @relation(fields: [worksheetId], references: [id], onDelete: Cascade)
  answers     Answer[]  @relation("SubmissionAnswers")
  
  @@unique([worksheetId, studentId], name: "worksheetId_studentId")
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  taskType    TaskType
  order       Int       
  orderIndex  Int       @default(0)  // Make sure this line exists
  points      Int       @default(0)
  options     Json?
  solution    String?
  worksheetId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  worksheet   Worksheet @relation("WorksheetTasks", fields: [worksheetId], references: [id], onDelete: Cascade)
  answers     Answer[]  @relation("TaskAnswers")
}

model Answer {
  id           Int        @id @default(autoincrement())
  content      String?
  isCorrect    Boolean?
  feedback     String?
  submissionId Int
  taskId       Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now())
  submission   Submission @relation("SubmissionAnswers", fields: [submissionId], references: [id], onDelete: Cascade)
  task         Task       @relation("TaskAnswers", fields: [taskId], references: [id], onDelete: Cascade)
}

/// Define roles for users
enum Role {
  STUDENT
  TUTOR
  ADMIN
}

/// Aufgabentypen für Übungsblätter
enum TaskType {
  MCQ
  SQL
  TEXT
}

/// Status einer Abgabe
enum SubmissionStatus {
  DRAFT
  SUBMITTED
}